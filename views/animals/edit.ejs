<% include ../partials/header%>
<div class="container">
  <div class="col-xs-10 col-xs-offset-1">
    <h3 class="text-center">Edit Animal</h3>
    <form action="/zoos/<%=animal.zoo%>/animals/<%= animal.id %>?_method=PUT" method="POST" class="form-horizontal">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="animal[name]" id="name" value="<%=animal.name%>"class="form-control">
      </div>
      <div class="form-group">
        <label for="location">Species:</label>
        <input type="text" name="animal[species]" id="location" value="<%=animal.species%>"class="form-control">
      </div>
      <div class="form-group">
        <label for="age">Age:</label>
        <input type="text" name="animal[age]" id="age" value="<%=animal.age%>"class="form-control">
      </div>
      <div class="form-group">
        <label for="photo">Photo:</label>
        <input type="text" name="animal[photo]" id="photo" value="<%=animal.photo%>"class="form-control">
      </div>
      <input type="submit" value="Update" class="btn btn-success btn-block">
    </form>
  </div>
</div>
<% include ../partials/footer%>